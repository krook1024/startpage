body, html {
	background-color: #1B1D1E;
	background: url('/home/b1/.config/wall.png') no-repeat;
	background-size: cover;
	color: #FFF;
	font-family: 'Roboto', sans, sans-serif;
}

#cont {
	display: flex;
	flex-wrap: wrap;
	flex-flow: row wrap;
	justify-content: space-evenly;
	align-content: center;
	margin: auto;
	height: 300px;
}

section { padding: 0.5em; }
section h1 { text-transform: uppercase }
section#date { flex-basis: 100%; justify-content: center; }
section#date p { text-align: center; font-size: 200%; }

ul {
	list-style-type: none;
	padding: 5px;
}
ul li { margin-top: .2em; }
ul li a, ul li a:visited, ul li a:active {
	text-decoration: none;
	color: #AE81FF;
}
ul li a:hover { color: #D63AE1; }

input {
	background-color: #232323;
	color: #CCC;
	border: 1px solid #AE81FF;
	border-radius: 4px;
	padding: .5em;
}
